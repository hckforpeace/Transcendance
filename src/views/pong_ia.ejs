
  <script>
     console.log("Script chargé");
  async function get_player_1() {
    try {
      const token = localStorage.getItem('token'); // récupère le JWT
      const response = await fetch('/api/get_player', {
        headers: {
          'Authorization': `Bearer ${token}`
        }
      });
      if (!response.ok) throw new Error('Erreur réseau');
      const data = await response.json();
      return data.name || "Joueur inconnu";
    } catch (err) {
      console.error('Erreur lors du fetch du joueur 1:', err);
      return "Erreur joueur";
    }
  }
  
    // Met à jour dynamiquement le DOM avec le nom
    get_player_1().then(name => {
      document.getElementById("left-player-name").textContent = name;
    });
  </script>

